<h2>This is method with REST request to CouchDB</h2>
<form method='post' action='/list/add'>
    <input type="text" name="text" placeholder="text" required=>
    <input type="submit" value="submit">
</form>
<ol>
<% todolist.forEach(function(dolist){ %>
<li>
    <form method="post" action="/list/delete/<%= dolist.key %>" style='margin: 0;'>
        <input type="hidden" value="<%= dolist.value.rev %>" name='rev'>
        <input type="submit" value="<%= dolist.value.text %>">
    </form>
</li>
<% }); %>
    </ol>
<section id="todoapp">
    <header id="header">
        <h2>This is method with front PouchDB request</h2>
        <input id="new-todo" placeholder="What needs to be done?" autofocus>
    </header>
    <section id="main">
        <ol id="todo-list"></ol>
    </section>
    <footer id="footer">
        <span id="todo-count"></span>
        <div id="sync-wrapper">
        </div>
    </footer>
</section>

<script src="//cdn.jsdelivr.net/npm/pouchdb@6.3.4/dist/pouchdb.min.js"></script>
<script type="text/javascript" src='/js/app.js'></script>
